<?xml version="1.0" encoding="utf-8"?>
<form>
       <field name="id" id='id' type="text" default="0"
			readonly="true" class="readonly"
			label="ID" description ="ID"/>
            
	<field name="name"
			type="text"
			label="Name"
			description="Supporter Name"
			size="40"
			default=""
                        required="true"
		/>
        <field name="title"
			type="list"
			label="Title"
			description="Supporter Title"
			size="1"
			default=""
		>
                    <option value="Mr.">Mr.</option>
                    <option value="Mrs.">Mrs.</option>
                    <option value="Miss.">Miss.</option>
                    </field>

                <field name="email"
			type="text"
			label="Email"
			description="Supporter Email"
			size="40"
			default=""
                        required="true"
		/>
                <field name="address"
			type="text"
			label="Address"
			description="Supporter Address"
			size="40"
			default=""
                        required="false"
		/>
                <field name="city"
			type="text"
			label="City"
			description="Supporter city"
			size="40"
			default=""
                        required="false"
		/>
                <field name="country"
			type="text"
			label="country"
			description="Supporter Country"
			size="40"
			default=""
                        required="false"
		/>
                <field name="donate"
			type="text"
			label="Donate"
			description="Supporter Donate"
			size="40"
			default=""
                        class="readonly"
                        readonly="true"
                        />
                <field name="state" type="list"
			label="Published" description="Published"
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

        <field name="description"
			type="editor"
			label="Description"
			description="Supporter descrition"
			size="40"
			default=""
		/>
</form>
